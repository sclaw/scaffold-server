insert into auth.role (title, parent_fk)
select 'editor', id from auth.role where title = 'provider';

update auth.role
set parent_fk = (select id from auth.role where title = 'editor'),
    modified = now()
where title = 'guest';

insert into auth.permission (title, parent_fk)
select 'provider_editor', id from auth.permission where title = 'provider_admin';

insert into auth.permission (title, parent_fk)
select 'provider_settings', id from auth.permission where title = 'provider_admin';

update auth.permission
set parent_fk = (select id from auth.permission where title = 'provider_editor'),
    modified = now()
where title = 'provider_guest';

insert into auth.role_permission (role_fk, permission_fk)
values ((select id from auth.role where title = 'provider'), (select id from auth.permission where title = 'provider_settings'));

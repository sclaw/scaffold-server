create schema if not exists stat;
create table stat.api_call_counter (
  api text not null,
  created timestamptz not null default now(),
  user_fk int8 not null constraint "api_call_counter___user_id_fk" references auth.user(id)
);
create index api_call_counter__api__idx on stat.api_call_counter (api);
create index api_call_counter__user_fk__idx on stat.api_call_counter (user_fk);